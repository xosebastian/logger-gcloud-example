{
  "name": "logger-gcloud-example",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "npm run build -w @org/nest-gcp-logger && npm run build -w sample-app",
    "test": "npm test -w @org/nest-gcp-logger && npm run build -w @org/nest-gcp-logger && npm test -w sample-app",
    "lint": "npm run lint -w @org/nest-gcp-logger && npm run lint -w sample-app",
    "format": "prettier -w \"**/*.{ts,js,json,md}\"",
    "dev": "npm run start:dev -w sample-app"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.2.5",
    "@types/node": "^22.10.7",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.0",
    "eslint": "^9.18.0",
    "@eslint/js": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@types/express": "^5.0.0",
    "@nestjs/testing": "^11.0.1",
    "tsconfig-paths": "^4.2.0"
  }
}
